<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.VehicleManagerFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Add vehicle fragment" />

    <TextView
        android:id="@+id/vehicle_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:text="Enter name:"
        android:textAlignment="viewEnd"
        android:textSize="14sp"
        app:layout_constraintDimensionRatio="H, 1:6"
        app:layout_constraintEnd_toStartOf="@+id/vehicle_name_field"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/vehicle_name_field" android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/vehicle_name"
        android:layout_marginStart="32dp" app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/vehicle_name" android:hint="Vehicle name"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        app:layout_constraintDimensionRatio="H, 1:6"
        android:text="Type:"
        android:ems="10"
        android:textAlignment="viewEnd"
        android:id="@+id/vehicle_type_field"
        android:textSize="14sp" app:layout_constraintTop_toBottomOf="@+id/vehicle_name"
        android:layout_marginTop="32dp" app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="32dp" app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintEnd_toStartOf="@+id/vehicle_type_input"/>

    <Spinner
        android:id="@+id/vehicle_type_input"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="type"
        android:textSize="14sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/vehicle_type_field"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/vehicle_type_field" />

    <TextView
        android:text="Mileage:"
        android:layout_width="0dp"
        app:layout_constraintDimensionRatio="H, 1:6"
        android:layout_height="wrap_content"
        android:textAlignment="viewEnd"
        android:id="@+id/mileage_field" android:textSize="14sp" app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="32dp" android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/vehicle_type_field" app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintEnd_toStartOf="@+id/mileage_input_field"/>
    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/mileage_input_field"
        android:textSize="14sp" app:layout_constraintStart_toEndOf="@+id/mileage_field"
        android:layout_marginStart="32dp" app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="32dp" app:layout_constraintBaseline_toBaselineOf="@+id/mileage_field"
        app:layout_constraintHorizontal_bias="0.5" android:hint="100000"/>
    <Button
        android:text="Add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/add_vehicle_btn" app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="18sp"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintTop_toBottomOf="@+id/mileage_field" android:layout_marginTop="32dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>