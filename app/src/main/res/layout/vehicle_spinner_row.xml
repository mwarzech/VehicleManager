<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/vehicle_spinner_row_layout"
                android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/spinner_vehicle_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_alignParentStart="true" android:layout_alignParentTop="true"
        android:layout_marginStart="10dp" android:layout_marginTop="10dp"
        android:text="id" android:textSize="18sp"/>
    <TextView
        android:id="@+id/spinner_vehicle_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@id/spinner_vehicle_id"
        android:text="Name"
        android:textSize="18sp"/>
    <TextView
        android:id="@+id/spinner_vehicle_mileage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@id/spinner_vehicle_name" android:text="Mileage"
        android:textSize="18sp"/>
</RelativeLayout>