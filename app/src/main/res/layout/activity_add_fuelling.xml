<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddFuellingActivity">

    <TextView
        android:id="@+id/fuel_amount_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:text="Fuel amount:" app:layout_constraintBottom_toTopOf="@+id/fuel_price_label"
        app:layout_constraintEnd_toStartOf="@+id/fuel_amount" app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"/>
    <EditText
        android:id="@+id/fuel_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp" android:ems="10"
        android:inputType="numberDecimal"
        app:layout_constraintBaseline_toBaselineOf="@+id/fuel_amount_label" app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5" app:layout_constraintStart_toEndOf="@+id/fuel_amount_label"/>
    <TextView
        android:id="@+id/fuel_price_label"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_marginStart="32dp" android:layout_marginTop="32dp"
        android:text="Fuel price per litre:"
        app:layout_constraintBottom_toTopOf="@+id/fuel_type_label" app:layout_constraintEnd_toStartOf="@+id/fuel_price"
        app:layout_constraintHorizontal_bias="0.5" app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fuel_amount_label"/>
    <EditText
        android:id="@+id/fuel_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:ems="10" android:inputType="numberDecimal"
        app:layout_constraintBaseline_toBaselineOf="@+id/fuel_price_label" app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/fuel_price_label"/>
    <TextView
        android:id="@+id/fuel_type_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:text="Fuel type:"
        app:layout_constraintBottom_toTopOf="@+id/fuelling_mileage_label"
        app:layout_constraintEnd_toStartOf="@+id/fuel_type"
        app:layout_constraintHorizontal_bias="0.5" app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fuel_price_label"/>
    <Spinner
        android:id="@+id/fuel_type"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.514" app:layout_constraintStart_toEndOf="@+id/fuel_type_label"
        app:layout_constraintTop_toTopOf="@+id/fuel_type_label"/>
    <TextView
        android:id="@+id/fuelling_mileage_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:text="Fuelling mileage:"
        app:layout_constraintBottom_toTopOf="@+id/add_fuelling_btn" app:layout_constraintEnd_toStartOf="@+id/fuelling_mileage"
        app:layout_constraintHorizontal_bias="0.5" app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fuel_type_label"/>
    <EditText
        android:id="@+id/fuelling_mileage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:ems="10" android:inputType="number"
        app:layout_constraintBaseline_toBaselineOf="@+id/fuelling_mileage_label"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/fuelling_mileage_label"/>
    <Button
        android:id="@+id/add_fuelling_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_marginTop="32dp"
        android:layout_marginBottom="32dp" android:text="Add fuelling"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5" app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fuelling_mileage_label"/>
</androidx.constraintlayout.widget.ConstraintLayout>